{% extends 'base.html.twig' %}
{% block body %}
<h1>Authors</h1>
<a href="{{ path('author_new') }}">Add New Author</a>
<ul>
    {% for author in authors %}
        <li>
            {{ author.name }} ({{ author.nationality }})
            <a href="{{ path('author_edit', {'name': author.name}) }}">Edit</a>
            <form method="post" action="{{ path('author_delete', {'name': author.name}) }}" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.name) }}">
                <button type="submit">Delete</button>
            </form>
        </li>
    {% endfor %}
</ul>
{% endblock %}
